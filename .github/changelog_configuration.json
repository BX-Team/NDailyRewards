{
  "template": "#{{CHANGELOG}}",
  "commit_template": "- [`#{{SHORT_MERGE_SHA}}`](https://github.com/BX-Team/NDailyRewards/commit/#{{MERGE_SHA}}) #{{TITLE}}",
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feat", "feature"]
    },
    {
      "title": "## 🐛 Fixes",
      "labels": ["fix", "bug"]
    },
    {
      "title": "## 🏎️ Performance",
      "labels": ["perf"]
    },
    {
      "title": "## 🏗 Refactor",
      "labels": ["refactor"]
    },
    {
      "title": "## 📝 Documentation",
      "labels": ["docs"]
    },
    {
      "title": "## 🔨 Build",
      "labels": ["build", "chore", "ci"]
    },
    {
      "title": "## 💅 Style",
      "labels": ["style"]
    },
    {
      "title": "## 💬 Other",
      "labels": []
    }
  ],
  "label_extractor": [
    {
      "pattern": "^(build|chore|ci|docs|feat|fix|perf|refactor|revert|style){1}(\\([\\w\\-\\.]+\\))?(!)?: ([\\w ])+([\\s\\S]*)",
      "on_property": "title",
      "target": "$1"
    }
  ],
  "custom_placeholders": [
    {
      "name": "SHORT_MERGE_SHA",
      "source": "MERGE_SHA",
      "transformer": {
        "pattern": "^([0-9a-f]{7})[0-9a-f]*$",
        "target": "$1"
      }
    }
  ]
}
