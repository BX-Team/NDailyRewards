{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "\uD83D\uDD04 dependencies"
  ],
  "packageRules": [
    {
      "groupName": "patch",
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "matchPackageNames": [
        "*",
        "!/com.destroystokyo.paper*/"
      ]
    },
    {
      "groupName": "minor",
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true,
      "matchPackageNames": [
        "*",
        "!/com.destroystokyo.paper*/"
      ]
    },
    {
      "groupName": "all-major",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "matchPackageNames": [
        "*",
        "!/com.destroystokyo.paper*/"
      ]
    }
  ],
  "schedule": [
    "before 4am on Monday"
  ],
  "semanticCommitType": "build",
  "commitMessagePrefix": "chore(deps): "
}
